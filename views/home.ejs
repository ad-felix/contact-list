<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="heading"><i class="fas fa-address-book"></i>Contact List</h1>

        <div id="container">
            <ul>
                <% for(let i of contact_list) { %>
                    <li>
                        <div id="inner-container">
                            <div id="list">
                                <p><%= i.name %></p>
                                <p><%= i.phone %></p>
                            </div>
                            <div id="delete-btn">
                                <a href="/delete-contact"><i class='fas fa-window-close'></i></a>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Name" required>
            <input type="text" name="phone" placeholder="Phone" required>

            <button type="submit">Add Contact</button>
        </form>
        <script src="https://kit.fontawesome.com/128008b373.js"></script>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>